@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All"></div>
		<form asp-action="ResetPassword">

			<input class="text" asp-for="NewPassword" placeholder="New Password" required="">
			<span asp-validation-for="NewPassword" class="test-danger"></span>
			<br />

			<input class="text" asp-for="ConfirmNewPassword" placeholder="New Confirm Password" required="">
			<span asp-validation-for="ConfirmNewPassword" class="test-danger"></span>
			<br />

			<input type="submit" value="Reset">
		</form>
	</div>
</div>
@section ValidationScriptSection
{
	<partial name="_ValidationScriptsPartial" />
}
