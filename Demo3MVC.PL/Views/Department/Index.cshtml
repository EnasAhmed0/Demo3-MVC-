@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "All Departments";
}

@if (TempData is not null)
{
    <div id="MessageDiv" class="alert alert-success ">
            @TempData["Message"] 
    </div>
}


<a asp-action="Create" asp-controller="Department" class="btn btn-success p-2 rounded-pill">Create New Department</a>
@if (Model.Count() > 0)
{
    <h1>All Departments</h1>
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.code)</td>
                <td>@Html.DisplayNameFor(D=>D.Name)</td>
                <td>@Html.DisplayNameFor(D=>D.DateOfCreation)</td>
                <td>Details</td>
                <td>Updates</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var dept in Model)
            {
                <tr>
                    <td>@dept.code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>
                    <Partial name="_ButtonsPartialView" model="@dept.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-info">
        <h3>There is No Departments</h3>
    </div>
}


