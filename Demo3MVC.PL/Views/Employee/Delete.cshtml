@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure to Delete This "@Model.Name" Employee</h1>
<br />
<div asp-validation-summary="All"></div>

<form asp-action="Delete">
    <partial name="Partials/DeleteDetailsPartialView" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" asp-controller="Employee" class="btn btn-light shadow">Cancel</a>
</form>

