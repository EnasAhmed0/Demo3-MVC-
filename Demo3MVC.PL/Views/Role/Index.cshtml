@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-success">Add New Role</a>
<br />
<h1>All Users Roles</h1>

@if (Model.Count() > 0)
{

    <div class="mt-4">
        <form class="row" asp-action="Index">
            <div class="col-10">
                <input type="text" class="form-control" placeholder="Role's Name" name="SearchValue" />
            </div>
            <div class="col-2">
                <input type="submit" value="Search" class="btn btn-outline-info" />
            </div>
        </form>
    </div>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delets</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <Partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning text-center">
        <h1>There is No Roles</h1>
    </div>
}

